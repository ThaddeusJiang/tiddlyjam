\end

\define get_display_name()
<$text text={{{ [<currentTiddler>get[name]else<currentTiddler>] }}} />
\end

\define get_relative_url()
/<$macrocall $name="tv-get-export-path" title={{!!title}}/>
\end

\define get_absolute_url()
